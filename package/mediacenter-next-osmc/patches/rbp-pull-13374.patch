+  switch (m_state)
+  {
+    case STATE::NEED_KEY:
+    {
+      std::string strPrompt = g_localizeStrings.Get(35169);  // "Press a key"
+      std::string strWarn = g_localizeStrings.Get(35170);  // "Press a key ({1:d})"
